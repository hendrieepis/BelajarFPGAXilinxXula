# timing constraint primarily to make the SDRAM controller operate at 100 MHz
NET      "clk"           TNM_NET="clk"; 
TIMESPEC "TS_clk"=PERIOD "clk"          10 ns HIGH 50 %; 

net      rst_n           loc=E11;       # active-low pushbutton
